{
  "name": "sidebar-for-class",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "vite",
    "electron": "wait-on http://localhost:3000 && electron .",
    "dev": "vite",
    "build": "vite build",
    "build:win": "npm run build && electron-builder --win",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.sidebar.class",
    "productName": "SidebarForClass",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main/**/*",
      "main.js",
      "preload.js",
      "package.json",
      "main-utils.js"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "extraFiles": [
      {
        "from": "data",
        "to": "data",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asar": true
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PANDAJSR/sidebar-for-class.git"
  },
  "keywords": [],
  "author": "",
  "license": "GPL-3.0-only",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/PANDAJSR/sidebar-for-class/issues"
  },
  "homepage": "https://github.com/PANDAJSR/sidebar-for-class#readme",
  "devDependencies": {
    "@fluentui/react-components": "^9.72.9",
    "@fluentui/react-icons": "^2.0.316",
    "@vitejs/plugin-react": "^5.1.2",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "vite": "^7.3.1",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "canvas": "^3.2.1",
    "koffi": "^2.14.1",
    "loudness": "^0.4.2",
    "node-window-manager": "^2.2.4",
    "ref-napi": "^3.0.3",
    "screenshot-desktop": "^1.15.3",
    "sharp": "^0.34.5",
    "win32-api": "^26.1.2"
  }
}
